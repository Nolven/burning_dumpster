<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="BookingFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:calendarViewShown="false"
                android:id="@+id/booking_date_picker"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/booking_people"
                android:hint="@string/booking_quest_people"/>

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/booking_comment"
                android:hint="@string/booking_comment"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/booking_price_title"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:id="@+id/booking_price"
                    android:text="@string/booking_price_placeholed"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <!--<CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/booking_license_agreement"/>-->

            <Button
                android:id="@+id/booking_reserve_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/booking_button"/>
        </LinearLayout>

    </ScrollView>
    </LinearLayout>