<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="@dimen/menu_button_width"
                                             android:layout_height="@dimen/menu_button_height"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:elevation="10dp"

>
    <ImageView android:layout_width="@dimen/game_player_icon_size"
                 android:layout_height="@dimen/game_player_icon_size"
                 android:id="@+id/playerIcon"
                 android:background="@drawable/circle"
                 app:srcCompat="@drawable/ic_player"
                 android:layout_margin="@dimen/small_margin"
                 android:padding="@dimen/small_padding"
                 app:layout_constraintLeft_toLeftOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/playerName"
              android:fontFamily="@font/aclonica"
              android:textColor="#000"
              android:textSize="@dimen/small_text_size"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toRightOf="@id/playerIcon"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="@dimen/small_margin"
    />

    <ImageView android:layout_width="@dimen/game_player_coin_size"
               android:layout_height="@dimen/game_player_coin_size"
               android:id="@+id/coinIcon"
               app:srcCompat="@drawable/coin"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginEnd="@dimen/game_player_info_margin"
               android:layout_marginBottom="@dimen/small_margin"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/coinCounter"
              android:fontFamily="@font/aclonica"
              android:textColor="#000"
              android:textSize="@dimen/small_text_size"
              app:layout_constraintRight_toLeftOf="@id/coinIcon"
              app:layout_constraintBottom_toBottomOf="@id/coinIcon"
    />

    <ImageView android:layout_width="@dimen/game_player_coin_size"
               android:layout_height="@dimen/game_player_coin_size"
               android:id="@+id/figurineIcon"
               app:srcCompat="@drawable/figurine"
               android:layout_marginEnd="@dimen/game_player_info_margin"
               app:layout_constraintBottom_toBottomOf="@id/coinIcon"
               app:layout_constraintRight_toLeftOf="@+id/coinCounter"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/figurineCounter"
              android:fontFamily="@font/aclonica"
              android:textColor="#000"
              android:textSize="@dimen/small_text_size"
              app:layout_constraintBottom_toBottomOf="@id/coinIcon"
              app:layout_constraintRight_toLeftOf="@id/figurineIcon"
    />




</android.support.constraint.ConstraintLayout>