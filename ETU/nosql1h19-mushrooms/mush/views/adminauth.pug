extends main

block general
    div(style="weight: 100%; height:100%; display: -webkit-flex; -webkit-align-items: center;display: flex;align-items: center; justify-content: center;" )
        div(style="width:300px; border-radius: 20px;  background-color: #262630; padding: 25px")
            h1(style="margin-bottom:30px;") #{title}
            form(action="/login" method="post")
                p
                    label Login
                    input#login.w3-input(type="text", required, placeholder="Login" name="username")
                    label Password
                    input#password.w3-input(type="password", required, placeholder="Password" name="password")
                p
                    input.w3-button.w3-border(type="submit" value="Log in")